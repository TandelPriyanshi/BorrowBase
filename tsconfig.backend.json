{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./Backend",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "Backend/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
